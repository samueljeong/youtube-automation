{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step5 YouTube Upload Input Schema",
  "description": "Step5 YouTube 업로드용 입력 스키마",
  "type": "object",
  "required": ["step", "category", "title", "video_filename", "upload_mode"],
  "properties": {
    "step": {
      "type": "string",
      "const": "step5_youtube_upload"
    },
    "category": {
      "type": "string",
      "description": "콘텐츠 카테고리 (channel_router에서 채널 결정에 사용)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "영상 제목"
    },
    "description_seed": {
      "type": "string",
      "description": "설명 생성용 시드 텍스트 (logline, episode_theme 등)"
    },
    "tags_seed": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "태그 생성용 시드 키워드 목록"
    },
    "video_filename": {
      "type": "string",
      "description": "업로드할 영상 파일 경로"
    },
    "upload_mode": {
      "type": "string",
      "enum": ["immediate", "scheduled"],
      "description": "업로드 모드 (즉시 또는 예약)"
    },
    "preferred_slot": {
      "type": "string",
      "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
      "description": "예약 업로드 시간 슬롯 (HH:MM 형식)",
      "examples": ["09:00", "10:00", "21:00"]
    },
    "timezone": {
      "type": "string",
      "default": "Asia/Seoul",
      "description": "시간대 (IANA timezone)"
    }
  }
}
