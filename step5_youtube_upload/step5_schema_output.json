{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step5 YouTube Upload Output Schema",
  "description": "Step5 YouTube 업로드 결과 스키마",
  "type": "object",
  "required": ["step", "status", "channel_id"],
  "properties": {
    "step": {
      "type": "string",
      "const": "step5_youtube_upload_result"
    },
    "status": {
      "type": "string",
      "enum": ["scheduled", "uploaded", "error"],
      "description": "업로드 상태"
    },
    "channel_id": {
      "type": "string",
      "description": "업로드된 채널 ID"
    },
    "video_id": {
      "type": ["string", "null"],
      "description": "업로드된 영상 ID (실패 시 null)"
    },
    "scheduled_time": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "예약 시간 (ISO-8601/RFC3339 형식, 즉시 업로드 시 null)"
    },
    "url": {
      "type": ["string", "null"],
      "description": "영상 URL (실패 시 null)"
    },
    "error_message": {
      "type": ["string", "null"],
      "description": "에러 메시지 (성공 시 null)"
    }
  }
}
