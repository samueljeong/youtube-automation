{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/settings.schema.json",
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(pip *)",
      "Bash(npm *)",
      "Bash(curl *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(wc *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(mkdir *)",
      "Bash(rm -rf outputs/*)",
      "Bash(rm -rf __pycache__/*)",
      "Bash(rm -rf .pytest_cache/*)",
      "Bash(pytest *)",
      "Bash(ruff *)",
      "Bash(black *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf .git)",
      "Bash(git push --force)",
      "Bash(git reset --hard)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "command": "bash .claude/hooks/session-start.sh",
        "description": "세션 시작 시 코드 상태 자동 점검"
      }
    ],
    "postToolUse": [
      {
        "matcher": {
          "toolName": "Edit",
          "filePath": "**/*.py"
        },
        "command": "ruff check --fix --quiet $FILE_PATH 2>/dev/null || true"
      }
    ]
  },
  "model": {
    "default": "claude-opus-4-5-20251101",
    "thinking": true
  }
}
